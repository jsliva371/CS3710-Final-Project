<div class="container mt-5" style="background: linear-gradient(to bottom, #f8f9fa, #e9e9e9); padding: 30px; border-radius: 8px;">
  <h2 class="text-center mb-4">Edit Your Profile</h2>

  <%= form_with model: @profile, local: true, class: "p-4 border rounded shadow-sm bg-white" do |form| %>
    <div class="mb-4">
      <%= form.label :username, class: "form-label" %>
      <%= form.text_field :username, class: "form-control form-control-lg", placeholder: "Enter your username" %>
    </div>

    <div class="mb-4">
      <%= form.label :bio, class: "form-label" %>
      <%= form.text_area :bio, class: "form-control form-control-lg", placeholder: "Tell us about yourself...", rows: 4 %>
    </div>

    <div class="mb-4">
      <%= form.label :platforms, "Gaming Platforms", class: "form-label" %>
      <%= form.text_field :platforms, value: @profile.platforms.join(', '), class: "form-control form-control-lg", placeholder: "Enter platforms (comma-separated)" %>
      <small class="form-text text-muted">Example: PC, PlayStation, Xbox</small>
    </div>

    <div class="mb-4">
      <%= form.label :steam_id, "Steam ID", class: "form-label" %>
      <%= form.text_field :steam_id, class: "form-control form-control-lg", placeholder: "Enter your Steam ID" %>
      <small class="form-text text-muted">Your Steam ID is required to link your Steam account.</small>
    </div>

    <div class="d-flex justify-content-between">
      <%= form.submit "Update Profile", class: "btn btn-primary btn-lg" %>
      <%= link_to "Cancel", profile_path(@profile), class: "btn btn-secondary btn-lg" %>
    </div>
  <% end %>
</div>
