<!DOCTYPE html>
<html>
  <head>
    <title>Gamer Finder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
  </head>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">


  <body>
    <!-- Navigation Banner -->
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="<%= root_path %>">Gamer Finder</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <% if current_user.profile.present? %>
            <li class="nav-item">
              <%= link_to "Profile", profile_path(current_user.profile), class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Create Profile", new_profile_path, class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item">
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>

          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
  
    </header>

    <!-- Page Content -->
    <div class="content">
      <%= yield %> <!-- This renders the page-specific content -->
    </div>
  </body>
</html>
